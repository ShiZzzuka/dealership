<div class="container">
	<h1>Cars</h1>
	<br/>
	<table class="table text-center table-dark table-striped">
		<thead>
			<tr>
				<th>Brand</th>
				<th>Model</th>
				<th>Engine Type</th>
				<th>Drive Type</th>
				<th>Transmission</th>
				<th>Exterior Color</th>
				<th>Interior Color</th>
				<th>Passenger Capacity</th>
				<th>Price</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @cars.each do |car| %>
				<tr>
					<td><%= car.brand.name %></td>
					<td><%= car.model %></td>
					<td><%= car.engine_type %></td>
					<td><%= car.drive_type %></td>
					<td><%= car.transmission %></td>
					<td><%= car.exterior_color %></td>
					<td><%= car.interior_color %></td>
					<td><%= car.passenger_capacity %></td>
					<td><%= car.price %></td>
					<td><%= link_to 'Show', car %></td>
					<td><%= link_to 'Edit', edit_car_path(car) %></td>
					<td><%= button_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>


	<br>

	<%= link_to 'New Car', new_car_path %>
</div>
