<div class="container">
	<p class="text-center" style="bold color:dark;font-size:32px;">Shop by brand</p>
	<div class="container">
	<br/>
	<table class="table text-center table-dark table-striped">
		<thead>
			<tr>
				<th>Brand</th>
			</tr>
		</thead>

		<tbody>
			<% @brands.each do |brand| %>
				<tr>
					<td><%= brand.name %></td>
					<td><%= link_to 'Show', brand %></td>
					<td><%= link_to 'Edit', edit_brand_path(brand) %></td>
					<td><%= button_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>


	<br>

	<%= link_to 'New Brand', new_brand_path %>
</div>

</div>
