<p id="notice"><%= notice %></p>
<div class="container text-center">
	<h1>Shop by brand</h1>
</div>
<br/>
<div class="container border small text-center">
	<br/>
	<div class="row row-cols-1 row-cols-md-3">
  <% @brands.each do |brand| %>
      <div class="col-md-3">
        <div class="card h-100">
          <%= link_to (image_tag brand.image, class: 'card-img-top', height: 300, width: 300), brand if brand.image.attached?%>
          <div class="card-body">
            <h5 class="card-title"> <%= link_to brand.name, brand %></h5>
						<br/>
            <p class="card-text">
        			<%= link_to 'Edit', edit_brand_path(brand) %> <%= button_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </div>
        </div>
      </div>
  <% end %>
</div>
<br/>
<%= link_to 'New Brand', new_brand_path %>
<br/>
<br/>
</div>
